<%= form_with(model: Conversation.new, method: :post, class: "d-flex" ) do |form| %>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.hidden_field :receiver, value: user.id %>

  <%= form.submit "Add", data: { confirm: 'Would you like to make conversation' }, class: "btn btn-sm btn-outline-primary" %>
<% end %>