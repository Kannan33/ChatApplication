<%= form_with model: [@conversation_sender, @message], method: :post, class: "validate col-12 d-flex justify-content-evenly align-items-end" do |f| %>
  <%= f.text_area :content, placeholder: 'Enter your message', class: 'form-control mt-2 w-85 rounded-2 h-75', style: 'border-decoration: none;', required: true %>
  <%= f.submit "Send", class: 'btn btn-primary mt-2 w-10 rounded-2'%>
<% end %>