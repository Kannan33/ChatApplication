<div class="container-fluid ps-4 pe-4">
  <div class="m-0 p-0 mt-2 row" style="width: 100%;">
    <div class="col-2">
      <div>
        <% if current_user.avatar&.present? %>
          <%= image_tag current_user.avatar, style: 'width: 200px; height: 200px;' %>
        <% end %>
      </div>
      <div>
        <p><%= current_user.about %></p>
      </div>
    </div>
    <div class="col-6">
      <span style="font-size: large; font-weight: bold;"><%= current_user.first_name + " " + current_user.last_name %></span><br>
      <span style="font-weight: bold;"><%= current_user.email %></span>
    </div>
  </div>
  <div class="row mt-2">
    <% if @search_user_conversations&.present? %>
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Send messages</th>
          <th scope="col">Received messages</th>
          <th scope="col">Profile</th>
        </tr>
        </thead>
        <tbody>
        <% @search_user_conversations&.each do |conversation| %>
          <tr>
            <td><%= conversation.received_user.first_name + " " + conversation.received_user.last_name %></td>
            <td><%= conversation.received_user.email %></td>
            <td><%= conversation.send_messages_count %></td>
            <td><%= conversation.received_message_count %></td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center mt-2">There is no conversation</p>
    <% end %>
  </div>
</div>