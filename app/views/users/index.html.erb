<% if current_user.confirmed? == false %>
  <div class="p-1 mt-0">
    <p class="text-center bg-warning"> <sup>*</sup>Confirm your gmail to activate your account within 24 hours, if you didn't receive, <%=link_to "resend", new_user_confirmation_url %></p>
  </div>
<% end %>
<div class="table-responsive ms-2 me-2 d-flex justify-content-center m-2">
  <div class="col-11">
    <table class="table table-striped table-bordered">
      <tbody>
      <% if @conversations.present? %>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Chat</th>
        </tr>
        <tr>
          <td colspan="4" class="text-center">
            <p class="mb-0">Resent Chat List</p>
          </td>
        </tr>
        <% @conversations.each do |conversation| %>
          <tr>
            <td><%= conversation.received_user.first_name + " " + conversation.received_user.last_name %></td>
            <td><%= conversation.received_user.email %></td>
            <td class="d-flex justify-content-center">
              <%= link_to "Chat", conversation_path(conversation.id), class: "btn btn-sm btn-outline-primary" %>
              <% if conversation.unread_messages_count != 0 %>
                <span class="badge bg-info ms-1" style="font-size: 14px;"><%= conversation.unread_messages_count %></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
      <% if @users.present? %>

        <tr>
          <td colspan="4" class="text-center">
            Add a new User
          </td>
        </tr>
        <tr>
          <th></th>
          <th></th>
          <th>Add user</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name + " " + user.last_name %></td>
            <td><%= user.email %></td>
            <td colspan="2">
              <div class="d-flex justify-content-evenly">
                <%= render 'conversations/form', user: user %>
              </div>
            </td>
          </tr>
        <% end %>

      <% end %>
      </tbody>
    </table>
  </div>
</div>