<div class="container">
  <div class="col-8">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-2 mt-2">
        <%= f.label :email, class: "field-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50" %>
      </div>

      <div class="mb-2">
        <%= f.label :password, class: "field-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-50" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-2">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="actions mb-2">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>